package extra01;

import java.util.Scanner;

/*  Criei um projeto para calcular dois valores digitados pelo usuário.
 * Deverá ser apresentado um menu para o usuário para que ele possa
 * escolher um dos cálculos abaixo: 
Soma
Subtração
Multiplicação
Divisão
Resto da Divisão
Média dos valores
Utilize o conceito de orientação a objetos para implementar.
 * 
 */

public class TestCalculo {
	 public static void main(String[] args) {
		 
		 Calculo c = new Calculo();
		 
	      Scanner s = new Scanner(System.in);
	      System.out.print("Digite o primeiro número: ");
	      double num1 = s.nextDouble();
	      System.out.print("Digite o segundo número: ");
	      double num2 = s.nextDouble();
	      
	      System.out.println("Escolha a opção desejada: \n a) soma:\n b) subtração:\n c) multiplicação:\n d) divisão:\n e) resto da divisão:\n f) média dos valores: ");
	      String opcao = s.next();
	      
	      if(opcao.equalsIgnoreCase("a")) {
		      System.out.println("A soma dos números é " +c.soma(num1, num2));
		  }else if (opcao.equalsIgnoreCase("b")){
			  System.out.println("A subtração dos números é: " +c.subtracao(num1, num2));
		  }else if (opcao.equalsIgnoreCase("c")) {
			  System.out.println("A multiplicação dos números é: "+c.multiplicacao(num1, num2));
		  }else if (opcao.equalsIgnoreCase("d")) {
			  System.out.println("A divisãp dos números é: "+c.divisao(num1, num2));
		  }else if (opcao.equalsIgnoreCase("e")) {
			  System.out.println("O resto da divisão dos números é: "+c.restodivisao(num1, num2));
		  }else if (opcao.equalsIgnoreCase("f")) {
			  System.out.println("A média dos valores é: "+c.mediavalores(num1, num2));
		  }else {
			  System.out.println("Opção inválida");
		  }
	      s.close();
	 }
}
